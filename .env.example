# Server Configuration
PORT=8080

# Database Configuration (optional - uses in-memory storage if not provided)
MONGODB_URI=mongodb://localhost:27017
MONGODB_DATABASE=dotfiles

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here

# OAuth Redirect URL
# For development with SvelteKit frontend:
OAUTH_REDIRECT_URL=http://localhost:8080/auth/github/callback

# Frontend Configuration
# URL where your frontend is running
# For development:
FRONTEND_URL=http://localhost:5174

# For production:
# FRONTEND_URL=https://yourdomain.com

# CORS Configuration
# Comma-separated list of allowed origins for your frontend
# For development:
ALLOWED_ORIGINS=http://localhost:5174,http://localhost:5173,http://localhost:4173,http://localhost:3000

# For production, replace with your actual domain:
# ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Additional Configuration
GIN_MODE=debug